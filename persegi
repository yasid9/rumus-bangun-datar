<script type="text/JavaScript">
		function luas() { 
          a=eval (persegi.yasid1.value);
          c=Math.pow(a,2)
          persegi.hasil.value= c;
          
        }
  		function keliling() { 
          a=eval (persegi.yasid1.value);
          c=a*4
          persegi.hasil.value= c;
          
        }
  		function diagonal() { 
          a=eval (persegi.yasid1.value);
          c=Math.sqrt((Math.pow(a,2)+(Math.pow(a,2))))
          persegi.hasil.value= c;
          
        }
  
  		function sisi1() { 
          b=eval (persegi.yasid2.value);
          c=Math.sqrt(b,2)
          persegi.hasil.value= c;
          
        }
  		function sisi2() { 
          d=eval (persegi.yasid3.value);
          c= d/4
          persegi.hasil.value= c;
          
        }
  		function resetForm() {
        document.form1.reset();
        
        }  
  
